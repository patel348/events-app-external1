<div class="container">
    {{#events}}
        <div class="card" style="width: 18rem; float: left; margin-right: 1em">
        {{#if imgsrc}}
            <img src="{{ imgsrc }}" width="100%" height="225" />
        {{else}}
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225">
                <title>Placeholder</title>
                <rect width="100%" height="100%" fill="#55595c"></rect>
                <text y="50%" x="35%" fill="#ccc" dy=".3em">Thumbnail</text>
            </svg>
        {{/if}}
        <div class="card-body">
            <h5 class="card-title">{{ title }}</h5>
            <p class="card-text">{{ date }}</p>
            <p class="card-text">{{ description }}</p>
            <p class="card-text"><a href="{{ url }}">Website</a></p>
        </div>
        </div>
    {{/events}}
</div>